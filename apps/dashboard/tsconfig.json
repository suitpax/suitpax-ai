{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*"],
      "@/app/*": ["./app/*"],
      "@/lib/*": ["./lib/*"],
      "ui": ["../../packages/ui"],
      "ui/*": ["../../packages/ui/*"],
      "shared": ["../../packages/shared"],
      "shared/*": ["../../packages/shared/*"],
      "utils": ["../../packages/utils"],
      "utils/*": ["../../packages/utils/*"],
      "domains": ["../../packages/domains"],
      "domains/*": ["../../packages/domains/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
